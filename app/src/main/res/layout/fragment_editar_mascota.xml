<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:clickable="true"
    android:focusable="true"
    tools:context=".EditarMascotaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/titleEditar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Mascota"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Tipo de Mascota">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tipoMascota"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Edad">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Peso">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/peso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="GÃ©nero">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/genero"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Vacunas de PERRO -->
            <LinearLayout
                android:id="@+id/vacunas_perro_container_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Vacunas para Perros"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/label_revacuna_perro_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/revaccination_label"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textStyle="bold"
                    android:layout_marginEnd="40dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                    <CheckBox android:id="@+id/cb_rabia_perro_edit" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Rabia"/>
                    <com.google.android.material.textfield.TextInputLayout android:id="@+id/layout_revacuna_rabia_perro_edit" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="180dp" android:layout_height="wrap_content" android:visibility="gone" android:hint="@string/date_format_hint"><com.google.android.material.textfield.TextInputEditText android:id="@+id/fecha_revacuna_rabia_perro_edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="date"/></com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                    <CheckBox android:id="@+id/cb_parvovirus_edit" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Parvovirus"/>
                    <com.google.android.material.textfield.TextInputLayout android:id="@+id/layout_revacuna_parvovirus_edit" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="180dp" android:layout_height="wrap_content" android:visibility="gone" android:hint="@string/date_format_hint"><com.google.android.material.textfield.TextInputEditText android:id="@+id/fecha_revacuna_parvovirus_edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="date"/></com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                    <CheckBox android:id="@+id/cb_moquillo_edit" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Moquillo"/>
                    <com.google.android.material.textfield.TextInputLayout android:id="@+id/layout_revacuna_moquillo_edit" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="180dp" android:layout_height="wrap_content" android:visibility="gone" android:hint="@string/date_format_hint"><com.google.android.material.textfield.TextInputEditText android:id="@+id/fecha_revacuna_moquillo_edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="date"/></com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                    <CheckBox android:id="@+id/cb_hepatitis_edit" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Hepatitis"/>
                    <com.google.android.material.textfield.TextInputLayout android:id="@+id/layout_revacuna_hepatitis_edit" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="180dp" android:layout_height="wrap_content" android:visibility="gone" android:hint="@string/date_format_hint"><com.google.android.material.textfield.TextInputEditText android:id="@+id/fecha_revacuna_hepatitis_edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="date"/></com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                    <CheckBox android:id="@+id/cb_leptospirosis_edit" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Leptospirosis"/>
                    <com.google.android.material.textfield.TextInputLayout android:id="@+id/layout_revacuna_leptospirosis_edit" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="180dp" android:layout_height="wrap_content" android:visibility="gone" android:hint="@string/date_format_hint"><com.google.android.material.textfield.TextInputEditText android:id="@+id/fecha_revacuna_leptospirosis_edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="date"/></com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Vacunas de GATO -->
            <LinearLayout
                android:id="@+id/vacunas_gato_container_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Vacunas para Gatos"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/label_revacuna_gato_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/revaccination_label"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textStyle="bold"
                    android:layout_marginEnd="40dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                    <CheckBox android:id="@+id/cb_trivalente_edit" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Trivalente Felina"/>
                    <com.google.android.material.textfield.TextInputLayout android:id="@+id/layout_revacuna_trivalente_edit" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="180dp" android:layout_height="wrap_content" android:visibility="gone" android:hint="@string/date_format_hint"><com.google.android.material.textfield.TextInputEditText android:id="@+id/fecha_revacuna_trivalente_edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="date"/></com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                    <CheckBox android:id="@+id/cb_leucemia_edit" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Leucemia Felina"/>
                    <com.google.android.material.textfield.TextInputLayout android:id="@+id/layout_revacuna_leucemia_edit" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="180dp" android:layout_height="wrap_content" android:visibility="gone" android:hint="@string/date_format_hint"><com.google.android.material.textfield.TextInputEditText android:id="@+id/fecha_revacuna_leucemia_edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="date"/></com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                    <CheckBox android:id="@+id/cb_rabia_gato_edit" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Rabia"/>
                    <com.google.android.material.textfield.TextInputLayout android:id="@+id/layout_revacuna_rabia_gato_edit" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="180dp" android:layout_height="wrap_content" android:visibility="gone" android:hint="@string/date_format_hint"><com.google.android.material.textfield.TextInputEditText android:id="@+id/fecha_revacuna_rabia_gato_edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="date"/></com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Antiparasitario"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:textSize="18sp"
                android:layout_marginTop="24dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/date_format_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fechaAntiparasitario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Antipulgas"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:textSize="18sp"
                android:layout_marginTop="24dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/date_format_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fechaAntipulgas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_actualizar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Actualizar"
                android:layout_marginTop="24dp" />

            <Button
                android:id="@+id/btn_cancelar"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>