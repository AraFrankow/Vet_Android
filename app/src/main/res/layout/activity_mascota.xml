<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MascotaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nombre"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:inputType="text"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/tipoMascota"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:inputType="text"
            android:hint="Tipo de mascota" />

        <EditText
            android:id="@+id/edad"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:inputType="number"
            android:hint="Edad"/>

        <EditText
            android:id="@+id/peso"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:inputType="number"
            android:hint="Peso"/>

        <EditText
            android:id="@+id/genero"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"            android:layout_marginEnd="32dp"
            android:inputType="text"
            android:hint="Genero" />

        <EditText
            android:id="@+id/nombreVacuna"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:inputType="text"
            android:hint="Nombre de la ultima vacuna dada" />

        <EditText
            android:id="@+id/fechaVacuna"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:hint="Fecha de la ultima vacuna (dd/MM/yyyy)"
            android:inputType="date" />

        <EditText
            android:id="@+id/fechaAntiparasitario"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:hint="Ultima vez que se le dio el antiparasitario (dd/MM/yyyy)"
            android:inputType="date" />

        <EditText
            android:id="@+id/fechaAntipulgas"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:hint="Ultima vez que se le dio el antipulgas (dd/MM/yyyy)"
            android:inputType="date" />

        <Button
            android:id="@+id/btn_registro"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:text="Agregar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
